{
  "name": "omnipay-frontend",
  "author": "OmniPay Team",
  "description": "OmniPay - Modern cross-chain payment platform with premium UI and Web3 integration",
  "keywords": [
    "omnipay",
    "web3",
    "blockchain",
    "payments",
    "cross-chain",
    "defi",
    "ethereum",
    "react",
    "vite",
    "wagmi",
    "rainbowkit"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/omnipay/omnipay-frontend"
  },
  "license": "MIT",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "setup": "git init && npx husky init && npx playwright install && shx rm .husky/pre-commit",
    "format": "prettier \"src/**/*.{ts,tsx}\" --write",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "eslint --max-warnings 0 --fix",
    "type-check": "tsc --noEmit",
    "dev": "vite",
    "storybook": "storybook dev -p 6006",
    "storybook:setup": "node node_modules/@storybook/addon-styling/bin/postinstall.js",
    "storybook:build": "storybook build",
    "test": "vitest run src/ && playwright test",
    "test:unit": "vitest src/",
    "test:unit:coverage": "vitest --coverage src/",
    "test:e2e": "playwright test",
    "test:e2e:report": "playwright show-report",
    "build": "npm run type-check && vite build",
    "build:production": "npm run lint && npm run type-check && vite build --mode production",
    "build:production:no-lint": "npm run type-check && vite build --mode production",
    "preview": "vite preview",
    "deploy:staging": "npm run build && echo 'Deploy to staging environment'",
    "deploy:production": "npm run build:production && echo 'Deploy to production environment'",
    "netlify:build": "npm run build:production:no-lint",
    "netlify:dev": "npm run dev",
    "contracts:compile": "echo 'Compile smart contracts - integrate with Hardhat/Foundry'",
    "contracts:deploy": "echo 'Deploy smart contracts to network'",
    "commitlint": "commitlint --edit",
    "commitizen": "exec < /dev/tty && git cz --hook || true",
    "prepare": "husky"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.0",
    "@iconify/icons-cryptocurrency": "^1.2.5",
    "@iconify/icons-logos": "^1.2.36",
    "@iconify/icons-mdi": "^1.2.48",
    "@iconify/react": "^6.0.2",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@nivo/pie": "^0.99.0",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-router": "^1.130.0",
    "@tanstack/react-table": "^8.21.3",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.23.22",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.61.1",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^15.6.1",
    "tailwind-merge": "^3.3.1",
    "viem": "^2.37.13",
    "wagmi": "^2.17.5",
    "zod": "^4.0.10",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@headlessui/react": "^2.2.6",
    "@heroicons/react": "^2.2.0",
    "@hookform/devtools": "^4.4.0",
    "@playwright/test": "^1.54.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^9.0.18",
    "@storybook/addon-themes": "^9.0.18",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@tanstack/react-table-devtools": "^8.21.3",
    "@tanstack/router-devtools": "^1.130.0",
    "@tanstack/router-plugin": "^1.130.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "3.2.4",
    "autoprefixer": "^10.4.21",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.18",
    "eslint-plugin-unicorn": "^60.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prop-types": "^15.8.1",
    "shx": "^0.4.0",
    "storybook": "^9.0.18",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.38.0",
    "vite": "7.0.6",
    "vite-plugin-static-copy": "^3.1.1",
    "vitest": "3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
